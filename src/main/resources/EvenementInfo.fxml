<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.EvenementInfoController"
      spacing="10" padding="20">

    <Label text="Détails de l'Événement" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="20">
        <ImageView fx:id="imageView" fitWidth="200" fitHeight="200" preserveRatio="true"/>

        <VBox spacing="10">
            <Label fx:id="nomLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="descriptionLabel" wrapText="true" maxWidth="400"/>
            <Label fx:id="dateLabel"/>
            <Label fx:id="lieuLabel"/>
            <Label fx:id="capaciteLabel"/>
            <Label fx:id="typeLabel"/>
            <Label fx:id="prixLabel"/>
            <Label fx:id="organisateurLabel"/>
        </VBox>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Retour" onAction="#handleRetour"/>
    </HBox>

</VBox>