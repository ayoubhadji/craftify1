<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.ModifierEvenementController"
      spacing="10" padding="20">

    <GridPane hgap="10" vgap="10">
        <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Date début :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <DatePicker fx:id="dateDebutPicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Date fin :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <DatePicker fx:id="dateFinPicker" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Lieu :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="lieuField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

        <Label text="Capacité :" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <TextField fx:id="capaciteField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <Label text="Type :" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
        <TextField fx:id="typeField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

        <Label text="Prix :" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
        <TextField fx:id="prixField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

        <Label text="Organisateur :" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
        <TextField fx:id="organisateurField" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

        <Label text="Image :" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
        <TextField fx:id="imageField" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#handleCancel"/>
        <Button text="Enregistrer" onAction="#handleSave"/>
    </HBox>

</VBox>