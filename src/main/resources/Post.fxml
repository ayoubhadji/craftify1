<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.PostController"
      spacing="20"
      alignment="TOP_CENTER"
      style="-fx-background-color: #F0F4F8;"
      prefWidth="800" prefHeight="800">

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <!-- 🔵 Header Section -->
    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #E3F2FD; -fx-padding: 15; -fx-background-radius: 10;">
        <Button fx:id="toggleFormButton"
                text="➕ Ajouter un Post"
                onAction="#togglePostForm"
                style="-fx-font-size: 14px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>

        <Label text="🗂 Liste des Posts"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
    </VBox>

    <!-- 🟢 Form Section -->
    <TitledPane fx:id="postFormPane"
                text="Créer un Post"
                expanded="true"
                visible="false"
                managed="false"
                style="-fx-font-weight: bold;">
        <VBox spacing="15" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="typePostField" promptText="Type du post" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Contenu:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="contenuField" promptText="Contenu du post" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Image:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <TextField fx:id="mediaUrlField" promptText="Chemin vers une image" HBox.hgrow="ALWAYS"/>
                    <Button text="📁" onAction="#browseImage">
                        <tooltip><Tooltip text="Choisir une image"/></tooltip>
                    </Button>
                </HBox>

                <Label text="Date de publication:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="datePublicationPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Tranche d'âge:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="trancheDageField" promptText="Ex: 18-25" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Likes:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="nmbLikeField" promptText="Nombre de likes" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="20" alignment="CENTER">
                <Button text="✅ Ajouter" onAction="#addPost"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="❌ Annuler" onAction="#cancelEditPost"
                        style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </TitledPane>

    <!-- 🟡 Search + Filter Section -->
    <HBox spacing="15" alignment="CENTER"
          style="-fx-background-color: #E8F0FE; -fx-padding: 15; -fx-background-radius: 10;">
        <TextField fx:id="searchField"
                   promptText="🔍 Rechercher un post par contenu"
                   style="-fx-font-size: 14px; -fx-padding: 8; -fx-background-radius: 8;"
                   prefWidth="300" />

        <ComboBox fx:id="typeFilter"
                  promptText="📂 Filtrer par type"
                  style="-fx-font-size: 14px; -fx-background-radius: 8;"
                  prefWidth="200"/>
        <Button text="🎯 Voir les Recommandations"
                onAction="#goToRecommendedPosts"
                style="-fx-font-size: 13px; -fx-background-color: #03A9F4; -fx-text-fill: white; -fx-background-radius: 8;" />

    </HBox>

    <!-- 🔘 Scrollable Post List Section -->
    <ScrollPane fitToWidth="true" fitToHeight="false" style="-fx-background: #ffffff;" prefHeight="600">
        <VBox fx:id="postContainer" spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </ScrollPane>

</VBox>
