<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.artisanat.controllers.GestionProduitsController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Gestion des Produits" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    </HBox>

    <GridPane vgap="10" hgap="10">
        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextArea fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Prix:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="prixField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="URL Image:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="imageUrlField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Ajouter" onAction="#ajouterProduit"/>
        <Button text="Modifier" onAction="#modifierProduit"/>
        <Button text="Supprimer" onAction="#supprimerProduit"/>
    </HBox>

    <TableView fx:id="produitsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idCol" text="ID"/>
            <TableColumn fx:id="nomCol" text="Nom"/>
            <TableColumn fx:id="descriptionCol" text="Description"/>
            <TableColumn fx:id="prixCol" text="Prix"/>
            <TableColumn fx:id="stockCol" text="Stock"/>
            <TableColumn fx:id="imageUrlCol" text="URL Image"/>
            <TableColumn fx:id="dateCreationCol" text="Date CrÃ©ation"/>
            <TableColumn fx:id="dateModificationCol" text="Date Modification"/>
        </columns>
    </TableView>

</VBox> 