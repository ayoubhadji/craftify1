<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.AventurierController"
            prefWidth="600" prefHeight="550">
    <children>
        <VBox layoutX="30" layoutY="20" spacing="15" prefWidth="540">
            <padding>
                <Insets top="10" left="10" right="10" bottom="10"/>
            </padding>
            <children>

                <Label text="Gestion des Aventuriers"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>


                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Button text="Ajouter" onAction="#handleAdd"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button text="Modifier" onAction="#handleEdit"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                    <Button text="Supprimer" onAction="#handleDelete"
                            style="-fx-background-color: #f44336; -fx-text-fill: white;"/>

                </HBox>

                <Label text="Liste des Aventuriers"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <ListView fx:id="listViewAventuriers" prefHeight="180"/>


            </children>
        </VBox>
    </children>
</AnchorPane>
