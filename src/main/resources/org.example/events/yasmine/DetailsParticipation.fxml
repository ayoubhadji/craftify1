<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.events.DetailsParticipationController"
      spacing="20">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Détails de la Participation" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <GridPane vgap="15" hgap="20">
        <Label text="ID:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="idLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        
        <Label text="Utilisateur:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Label fx:id="userLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        
        <Label text="Événement:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="evenementLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        
        <Label text="Prix:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Label fx:id="prixLabel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        
        <Label text="Statut:" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="statutLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Fermer" onAction="#handleFermer"/>
    </HBox>

</VBox> 