<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.payment.StripePaymentController"
      prefHeight="600.0" prefWidth="800.0"
      spacing="10"
      style="-fx-padding: 20;">
    
    <Label fx:id="statusLabel" style="-fx-font-size: 14px;"/>
    <WebView fx:id="cardElement" VBox.vgrow="ALWAYS"/>
    <Button fx:id="payButton" text="Payer" onAction="#handlePayment" 
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
    
</VBox>
